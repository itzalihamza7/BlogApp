<div class="mb-4 p-3 paragraph">
  <div class="element-content" >
      <% if element.content.present? %>
       <%= render 'authors/elements/content', element: element %>
      <% else %>
        Click to add content.
      <% end %>

    </div>
    <div class="element-form d-none" id='element-paragraph-<%= element.id %>-form'>
      <%= form_with(model: [:authors ,@post, element]) do |form| %>
        <%= form.rich_text_area :content, id: "element_content_#{element.id}" %>
        <div class="mt-3 d-flex justify-content-between">
          <div>
            <%= form.submit "Save", class: 'btn btn-primary' %>
            <a href="#" class='cancel btn btn-secondary'>Cancel</a>
          </div>
          <%= link_to 'Delete', authors_post_element_path(@post, element), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
        </div>
      <% end %>
    </div>
  </div>
