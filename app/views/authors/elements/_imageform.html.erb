 <div class="mb-4 p-3 element-image-<%= element.id %>">
                                   <% if element.image.attached? %>
                      <%= render 'authors/elements/image', element: element %>
                        <% else %>
                         <div class="element-image-form" id='element-image-<%= element.id %>-form'>
                          <%= form_with(model: [:authors,@post, element]) do |form| %>
                          <%= form.file_field :image %>
                          <div class="mt-3">
                            <%= form.submit "Save", class: 'btn btn-primary' %>

                             <%= link_to 'Delete', authors_post_element_path(@post, element), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>

                          </div>
                          </div>
                        <% end %>

                      <% end %>
                    </div>
