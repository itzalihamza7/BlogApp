
<div id="like-pane-<%=likeable.id%>">
          <%like = current_user.likes.find_by(likeable: likeable)%>
          <%if like.nil?%>
           <%= button_to  likes_path ,params: {like: {likeable_id: likeable.id,likeable_type: likeable.class.to_s}},remote: true ,method: :post,  class:'btn' do%>
           <i class="fa fa-heart-o"></i>
            <%end%>
          <%else%>
            <%= button_to  like_path(like.id),remote: true,method: :delete,  class:'btn' do%>
          <i class="fa fa-heart"></i>
            <%end%>
          <%end%>

        <%= pluralize(likeable.likes.count,'like')%>
</div>
